<% include ../partials/header %>

<div class="container">
    <form action="/blogs" method="POST">
      <div style="width: 50%; margin: 25px auto;">
      <div class="form-group">
      <label for "name">Name</label>
      <input class="form-control" type="text" name="name" class="form-control" placeholder="Name" />
      </div>
      <div class="form-group">
      <label for "adress">Address</label>
      <input class="form-control" type="text" name="address" class="form-control" placeholder="Address" />
      </div>
      <div class="form-group">
      <label for "image">Image</label>
      <input class="form-control" type="text" name="image" class="form-control" placeholder="Image" />
      </div>
      <div class="form-group">
      <label for "body">Content</label>
      <textarea name="body" class="form-control" rows="10"></textarea>
      </div>
      <input class="btn btn-submit" type="submit" />
      </div>
     </form>
    
</div>




